{
  "manifest_version": 3,
  "name": "GitHub Issue creator",
  "version": "1.0",
  "description": "Adds a button to any website that opens a modal with an iframe.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "identity"
  ],
  "host_permissions": [
    "https://github.ibm.com/*"
  ],
  "action": {
    "default_title": "Open Issue Creator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "4c5304c642424b9bccf7",
    "scopes": ["user", "repo"]
  }
}